#ifndef WHITTEDINTEGRATOR_HPP
#define WHITTEDINTEGRATOR_HPP

#include "common.hpp"
#include "integrator.hpp"

namespace GM {
    class WhittedIntegrator : public Integrator {
        public:
            WhittedIntegrator(uint32_t x, uint32_t y);
        
            VIRTUAL int shading(spu_intersection_t);
    };
    
    inline WhittedIntegrator::WhittedIntegrator(uint32_t x, uint32_t y):
        Integrator(x, y) {}    
}

#endif
